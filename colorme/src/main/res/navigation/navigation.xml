<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/blankFragment">
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.colorme.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_redFragment"
            app:destination="@id/redFragment" />
        <action
            android:id="@+id/action_blankFragment_to_pinkFragment"
            app:destination="@id/pinkFragment" />
    </fragment>
    <fragment
        android:id="@+id/redFragment"
        android:name="com.example.colorme.RedFragment"
        android:label="fragment_red"
        tools:layout="@layout/fragment_red" >
        <action
            android:id="@+id/action_redFragment_to_orangeFragment"
            app:destination="@id/orangeFragment" />
        <action
            android:id="@+id/action_redFragment_to_blueFragment"
            app:destination="@id/blueFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinkFragment"
        android:name="com.example.colorme.PinkFragment"
        android:label="fragment_pink"
        tools:layout="@layout/fragment_pink" >
        <action
            android:id="@+id/action_pinkFragment_to_yellowFragment"
            app:destination="@id/yellowFragment" />
        <action
            android:id="@+id/action_pinkFragment_to_greenFragment2"
            app:destination="@id/greenFragment2" />
    </fragment>
    <fragment
        android:id="@+id/orangeFragment"
        android:name="com.example.colorme.OrangeFragment"
        android:label="fragment_orange"
        tools:layout="@layout/fragment_orange" />
    <fragment
        android:id="@+id/blueFragment"
        android:name="com.example.colorme.BlueFragment"
        android:label="fragment_blue"
        tools:layout="@layout/fragment_blue" />
    <fragment
        android:id="@+id/yellowFragment"
        android:name="com.example.colorme.YellowFragment"
        android:label="fragment_yellow"
        tools:layout="@layout/fragment_yellow" />
    <fragment
        android:id="@+id/greenFragment2"
        android:name="com.example.colorme.GreenFragment2"
        android:label="fragment_green2"
        tools:layout="@layout/fragment_green2" />
</navigation>